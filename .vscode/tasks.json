{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "printenv",
      "type": "shell",
      "command": "printenv",
      "problemMatcher": []
    },
    {
      "label": "pip install",
      "type": "shell",
      "command": "pip install --user -r requirements.txt; pip install -e . ",
      "problemMatcher": []
    },
    {
      "label": "mkdocs_simple_gen",
      "type": "shell",
      "command": "mkdocs_simple_gen",
      "dependsOn": [
        "pip install"
      ],
      "problemMatcher": []
    },
    {
      "label": "gen_readme",
      "type": "shell",
      "command": "./examples/gen_readme.py",
      "problemMatcher": []
    },
    {
      "label": "mkdocs build",
      "type": "shell",
      "command": "mkdocs build --verbose",
      "dependsOrder": "sequence",
      "dependsOn": [
        "mkdocs_simple_gen",
        "gen_readme"
      ],
      "problemMatcher": []
    },
    {
      "label": "mkdocs serve",
      "type": "shell",
      "command": "mkdocs serve --verbose",
      "dependsOrder": "sequence",
      "dependsOn": [
        "mkdocs_simple_gen",
        "gen_readme"
      ],
      "problemMatcher": []
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "sudo rm -rf site/ build/ dist/ *.egg-info/ **/__pycache__/  **/docs_/ examples/*/mkdocs.yml examples/*/site/ examples/*/README.md",
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "./build.sh",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "test bats",
        "test lint",
        "htmlproofer"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test bats",
      "type": "shell",
      "command": "./tests/test.sh",
      "problemMatcher": [],
    },
    {
      "label": "test lint",
      "type": "shell",
      "command": "./tests/test_lint.sh",
      "problemMatcher": [],
    },
    {
      "label": "htmlproofer",
      "type": "shell",
      "command": "htmlproofer",
      "args": [
        "--url-ignore=https://fonts.gstatic.com,https://twitter.com/althack",
        "--allow-hash-href",
        "--file-ignore=./site/404.html",
        "--internal-domains='athackst.github.io/mkdocs-simple-plugin'",
        "./site/"
      ],
      "dependsOrder": "sequence",
      "dependsOn": [
        "build"
      ],
      "problemMatcher": []
    },
    {
      "label": "package",
      "type": "shell",
      "command": "python3 setup.py sdist bdist_wheel",
      "problemMatcher": []
    },
    {
      "label": "upgrade",
      "type": "shell",
      "command": "pip3 install --upgrade pip && pip-upgrade --skip-virtualenv-check -p all",
      "problemMatcher": []
    },
    {
      "label": "debugger prelaunch",
      "type": "shell",
      "command": "pwd; cp mkdocs-test.yml mkdocs.yml; /home/vscode/.local/bin/mkdocs_simple_gen --no-build",
      "options": {
        "cwd": "${fileDirname}"
      }
    }
  ]
}
