  "version": "2.0.0",
  "tasks": [
    {
      "label": "mkdocs_simple_gen",
      "type": "shell",
      "command": "pip install -e . && mkdocs_simple_gen",
      "problemMatcher": [],
      "options": {
        "env": {"PATH": "${env:PATH}:/home/vscode/.local/bin"}
      }
    },
    {
      "label": "pip install",
      "type": "shell",
      "command": "pip install -e . ",
      "problemMatcher": []
    },
    {
      "label": "mkdocs build",
      "type": "shell",
      "command": "mkdocs build --verbose",
      "problemMatcher": []
    },
    {
      "label": "mkdocs serve",
      "type": "shell",
      "command": "mkdocs serve",
      "problemMatcher": []
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "sudo rm -rf build/ dist/ **/site/ *.egg-info/ **/__pycache__/  **/docs_/ ${fixturesDir}/*/mkdocs.yml",
      "problemMatcher": [],
      "options": {
        "env": {"fixturesDir": "tests/integration/fixtures"}
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "./tests/test_flake8.sh && ./tests/integration/test.bats",
      "problemMatcher": [],
      "options": {
        "env": {"PATH": "${env:PATH}:/home/vscode/.local/bin"}
      }
    },
    {
      "label": "package",
      "type": "shell",
      "command": "python3 setup.py sdist bdist_wheel",
      "problemMatcher": []
    },
    
    {
      "label": "update",
      "type": "shell",
      "command": "pip3 install --upgrade pip && pip3 install --user -r requirements.txt --upgrade",
      "problemMatcher": []
    },
  ]
